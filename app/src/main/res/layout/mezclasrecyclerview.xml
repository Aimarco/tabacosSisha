<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:orientation="horizontal"
    >


    <LinearLayout
        android:id="@+id/LLprimerSabor"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/greencircularbg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtMarca1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:textSize="12sp"
            android:paddingEnd="2dp"
            android:background="#B3FA82"
            android:text="TextView"

            />

        <TextView
            android:id="@+id/txtSabor1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:paddingTop="12dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:paddingEnd="1dp"
            android:background="#B3FA82"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtporc1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B3FA82"
            android:paddingTop="15dp"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="50" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:background="@drawable/redcircularbg"
        android:layout_height="50dp"


        >
        <TextView
            android:id="@+id/txtMarca2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:paddingEnd="1dp"
            android:textSize="12sp"
            android:background="#F85575"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtSabor2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:paddingTop="12dp"
            android:paddingEnd="1dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="#F85575"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtporc2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="#F85575"
            android:text="50" />


    </LinearLayout>



</LinearLayout>

