<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtMarca1"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:background="#B3FA82"
            android:textStyle="bold"
            android:text="Tabaco 1"

            />

        <TextView
            android:id="@+id/txtSabor1"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:textStyle="bold"
            android:background="#9AD850"
            android:text="Sabor 1" />

        <TextView
            android:id="@+id/txtporc1"
            android:layout_width="80px"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginEnd="2dp"
            android:background="#50D87B"
            android:text="%" />

        <TextView
            android:id="@+id/txtMarca2"
            android:layout_width="250px"
            android:layout_marginEnd="2dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:background="#F85575"
            android:text="Tabaco 2" />

        <TextView
            android:id="@+id/txtSabor2"
            android:layout_width="200px"
            android:layout_marginEnd="2dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:background="#D8509C"
            android:text="Sabor 2" />

        <TextView
            android:id="@+id/txtporc2"
            android:layout_width="80px"
            android:layout_height="wrap_content"
            android:background="#D8505C"
            android:textStyle="bold"
            android:text="%" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMezclas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="65dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:text="Mezclas de sabores" />

</RelativeLayout>